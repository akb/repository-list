#!/usr/bin/env bash

BASEPATH=$(cd "$(dirname "${BASH_SOURCE[0]}")"/.. && pwd)

source bin/environment.local

bin/clean
bin/generate-certificates

bin/build-css
bin/build-vendor
bin/build-static

bin/watch-client &
bin/watch-less &
bin/watch-static &

$BASEPATH/node_modules/nodemon/bin/nodemon.js src/server/index.js &

wait
exit 0
